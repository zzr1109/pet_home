<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xw.dao.PostCodeDao">
    <resultMap id="dataMap" type="com.xw.entity.PostCode">
        <result property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="userImage" column="user_image"/>
        <result property="createTime" column="create_time"/>
        <result property="title" column="title"/>
        <result property="imageUrlList" column="image_url_list"/>
    </resultMap>

    <sql id="allColumn">
        id,content,user_id,user_name,user_image,create_time,title,image_url_list
    </sql>

    <!--添加语句的字段列表 insert into xxx set (image_url_list,show_status) values (#{xxxx},#{xxx})-->
    <sql id="insertColumn">
        <if test="content != null and content != ''">
            content,
        </if>
        <if test="userId != null">
            user_id,
        </if>
        <if test="userName != null and userName != ''">
            user_name,
        </if>
        <if test="userImage != null and userImage != ''">
            user_image,
        </if>
        <if test="createTime != null">
            create_time,
        </if>
        <if test="title != null and title != ''">
            title,
        </if>
        <if test="imageUrlList != null and imageUrlList != ''">
            image_url_list,
        </if>

    </sql>
    <!--添加语句的值列表-->
    <sql id="insertValue">
        <if test="content != null and content != ''">
            #{content},
        </if>
        <if test="userId != null">
            #{userId},
        </if>
        <if test="userName != null and userName != ''">
            #{userName},
        </if>
        <if test="userImage != null and userImage != ''">
            #{userImage},
        </if>
        <if test="createTime != null">
            #{createTime},
        </if>
        <if test="title != null and title != ''">
            #{title},
        </if>
        <if test="imageUrlList != null and imageUrlList != ''">
            #{imageUrlList},
        </if>
    </sql>

    <!--修改语句的字段列表 update xxx image_url_list = #{xxx} where id = #{}-->
    <sql id="updateValue">
        <if test="content != null and content != ''">
            content = #{content},
        </if>
        <if test="userId != null">
            user_id = #{userId},
        </if>
        <if test="userName != null and userName != ''">
            user_name = #{userName},
        </if>
        <if test="userImage != null and userImage != ''">
            user_image = #{userImage},
        </if>
        <if test="createTime != null">
            create_time = #{createTime},
        </if>
        <if test="title != null and title != ''">
            title = #{title},
        </if>
        <if test="imageUrlList != null and imageUrlList != ''">
            image_url_list = #{imageUrlList},
        </if>
    </sql>

    <!--查询语句的字段列表 select xxx  from xx where id-->
    <sql id="commonsValue">
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="content != null and content != ''">
            and content = #{content}
        </if>
        <if test="userId != null">
            and user_id = #{userId}
        </if>
        <if test="userName != null and userName != ''">
            and user_name = #{userName}
        </if>
        <if test="userImage != null and userImage != ''">
            and user_image = #{userImage}
        </if>
        <if test="createTime != null">
            and create_time = #{createTime}
        </if>
        <if test="title != null and title != ''">
            and title = #{title}
        </if>
        <if test="imageUrlList != null and imageUrlList != ''">
            and image_url_list = #{imageUrlList}
        </if>
    </sql>

    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into post_code
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="insertColumn"></include>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <include refid="insertValue"></include>
        </trim>
    </insert>

    <delete id="deleteById">
        delete from post_code
        <where>
            id = #{id}
        </where>
    </delete>

    <delete id="deleteBatchByIds">
        <if test="ids != null and ids.size() > 0">
            delete from post_code
            where id in <foreach collection="ids" separator="," open="(" close=")" item="item">#{item}</foreach>
        </if>
    </delete>

    <select id="queryById" resultMap="dataMap">
        select <include refid="allColumn"></include> from post_code where id = #{id}
    </select>

    <select id="queryAll" resultMap="dataMap">
        select <include refid="allColumn"></include> from post_code
        <trim prefix="where" prefixOverrides="and" suffixOverrides=",">
            <include refid="commonsValue"></include>
        </trim>
        order by id desc
    </select>

    <select id="queryByAll" resultMap="dataMap">
        select <include refid="allColumn"></include> from post_code
        <trim prefix="where" prefixOverrides="and" suffixOverrides=",">
            <include refid="commonsValue"></include>
        </trim>
        order by id desc
    </select>

    <update id="updateById">
        update post_code
        <set>
            <include refid="updateValue"></include>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <update id="updateEntity">
        update post_code
        set
        content = #{content},
        user_id = #{userId},
        user_name = #{userName},
        user_image = #{userImage},
        create_time = #{createTime},
        title = #{title},
        image_url_list = #{imageUrlList}
        <where>
            id = #{id}
        </where>
    </update>
</mapper>
